# Base Settings
TRACKLISTIFY_OUTPUT_DIR=.tracklistify/output
TRACKLISTIFY_CACHE_DIR=.tracklistify/cache
TRACKLISTIFY_TEMP_DIR=.tracklistify/temp
TRACKLISTIFY_LOG_DIR=.tracklistify/log
TRACKLISTIFY_VERBOSE=true
TRACKLISTIFY_DEBUG=false

# Track Identification Settings
# Längere Segmente = weniger Shazam-Calls pro Set
TRACKLISTIFY_SEGMENT_LENGTH=45
TRACKLISTIFY_MIN_CONFIDENCE=0.8
TRACKLISTIFY_TIME_THRESHOLD=30.0
TRACKLISTIFY_MAX_DUPLICATES=2
TRACKLISTIFY_OVERLAP_DURATION=10
TRACKLISTIFY_OVERLAP_STRATEGY=weighted
TRACKLISTIFY_MIN_SEGMENT_DURATION=10

# Provider Settings
TRACKLISTIFY_PRIMARY_PROVIDER=shazam
TRACKLISTIFY_FALLBACK_ENABLED=false
# TRACKLISTIFY_FALLBACK_PROVIDERS=["acrcloud"]

# ACRCloud Provider Settings (nicht genutzt)
# TRACKLISTIFY_ACRCLOUD_HOST=identify-eu-west-1.acrcloud.com
# TRACKLISTIFY_ACRCLOUD_TIMEOUT=10
# TRACKLISTIFY_ACR_ACCESS_KEY=
# TRACKLISTIFY_ACR_ACCESS_SECRET=

# Shazam Provider Settings
TRACKLISTIFY_SHAZAM_ENABLED=true
TRACKLISTIFY_SHAZAM_TIMEOUT=10
# Deutlich längerer Cooldown zwischen zwei Calls
TRACKLISTIFY_SHAZAM_COOLDOWN_SECONDS=4.0

# Spotify Provider Settings (optional, bei dir aktuell leer)
TRACKLISTIFY_SPOTIFY_TIMEOUT=10
TRACKLISTIFY_SPOTIFY_CLIENT_ID=
TRACKLISTIFY_SPOTIFY_CLIENT_SECRET=
TRACKLISTIFY_SPOTIFY_COOKIES=
TRACKLISTIFY_SPOTIFY_QUALITY=AAC_256
TRACKLISTIFY_SPOTIFY_FORMAT=m4a

# Provider Retry Settings
TRACKLISTIFY_RETRY_STRATEGY=exponential
TRACKLISTIFY_RETRY_MAX_ATTEMPTS=3
TRACKLISTIFY_RETRY_BASE_DELAY=1.0
TRACKLISTIFY_RETRY_MAX_DELAY=30.0

# Rate Limiting Settings (global)
TRACKLISTIFY_RATE_LIMIT_ENABLED=true
# Weniger Requests pro Minute insgesamt
TRACKLISTIFY_MAX_REQUESTS_PER_MINUTE=10
# Kein echtes Parallelfeuer – schön brav seriell
TRACKLISTIFY_MAX_CONCURRENT_REQUESTS=1

# Circuit Breaker Settings
TRACKLISTIFY_CIRCUIT_BREAKER_ENABLED=true
TRACKLISTIFY_CIRCUIT_BREAKER_THRESHOLD=5
TRACKLISTIFY_CIRCUIT_BREAKER_RESET_TIMEOUT=60.0

# Rate Limit Alert Settings
TRACKLISTIFY_RATE_LIMIT_ALERT_ENABLED=true
TRACKLISTIFY_RATE_LIMIT_ALERT_THRESHOLD=5.0
TRACKLISTIFY_RATE_LIMIT_ALERT_COOLDOWN=300.0

# Per-Provider Rate Limits
# Spotify (irrelevant gerade, aber lassen wir drin)
TRACKLISTIFY_SPOTIFY_MAX_RPM=60
TRACKLISTIFY_SPOTIFY_MAX_CONCURRENT=5
# Shazam deutlich gedrosselt
TRACKLISTIFY_SHAZAM_MAX_RPM=10
TRACKLISTIFY_SHAZAM_MAX_CONCURRENT=1
# ACRCloud (nicht genutzt)
TRACKLISTIFY_ACRCLOUD_MAX_RPM=30
TRACKLISTIFY_ACRCLOUD_MAX_CONCURRENT=5

# Cache Settings
TRACKLISTIFY_CACHE_ENABLED=true
TRACKLISTIFY_CACHE_TTL=3600
TRACKLISTIFY_CACHE_MAX_SIZE=1000
TRACKLISTIFY_CACHE_STORAGE_FORMAT=json
TRACKLISTIFY_CACHE_COMPRESSION_ENABLED=true
TRACKLISTIFY_CACHE_COMPRESSION_LEVEL=6
TRACKLISTIFY_CACHE_CLEANUP_ENABLED=true
TRACKLISTIFY_CACHE_CLEANUP_INTERVAL=3600
TRACKLISTIFY_CACHE_MAX_AGE=86400
TRACKLISTIFY_CACHE_MIN_FREE_SPACE=104857600

# Output Settings
TRACKLISTIFY_OUTPUT_FORMAT=all

# Download Settings
TRACKLISTIFY_DOWNLOAD_QUALITY=192
TRACKLISTIFY_DOWNLOAD_FORMAT=mp3
TRACKLISTIFY_DOWNLOAD_MAX_RETRIES=3
